# API Configuration
# These variables control the backend API endpoints and behavior
#
# Note: Vite uses import.meta.env instead of process.env
# All environment variables must be prefixed with VITE_ to be accessible

# Backend API base URL (default: http://localhost:8000)
VITE_API_BASE_URL=http://localhost:8000

# WebSocket URL for real-time updates (default: ws://localhost:8000)
VITE_WEBSOCKET_URL=ws://localhost:8000

# API request timeout in milliseconds (default: 30000)
VITE_API_TIMEOUT=30000

# Enable/disable API debug logging (default: true in development)
VITE_API_DEBUG=true

# Production Configuration Examples:
# VITE_API_BASE_URL=https://api.yourdomain.com
# VITE_WEBSOCKET_URL=wss://api.yourdomain.com
# VITE_API_TIMEOUT=60000
# VITE_API_DEBUG=false
